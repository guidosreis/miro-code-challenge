{
  "name": "miro-code-challenge",
  "version": "1.0.0",
  "description": "Code challenge for a frontend engineer position at Miro",
  "private": true,
  "scripts": {
    "build": "npm run rollup:production",
    "build:watch": "npm run rollup -- --watch",
    "rollup": "rollup --config",
    "rollup:production": "cross-env NODE_ENV=production npm run rollup",
    "test": "jest"
  },
  "author": "Guilherme dos Reis",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "autoprefixer": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "jest": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.2",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.35.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-watch": "^4.3.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    }
  }
}
